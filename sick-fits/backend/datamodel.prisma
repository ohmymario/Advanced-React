# For Prisma - updates ./generated/prisma.graphql
# npm run deploy for every change

# enum allows for preset options
# These are the only selectable options
enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  cart: [CartItem!]!
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  user: User!
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  item: Item! # relationship to Item
  user: User! # relationship to User
}


# @unique - The @unique directive expresses a unique constraint,
# meaning Prisma ensures that there never will be two nodes with the
# same values for the annotated field.
